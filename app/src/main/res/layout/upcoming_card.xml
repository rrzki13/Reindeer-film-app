<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="144dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="15dp">

    <ImageView
        android:id="@+id/img_card_upcoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/upcoming_1"
        android:contentDescription="@string/app_name" />

    <View
        android:id="@+id/view_background"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentBack"/>

    <RelativeLayout
        android:id="@+id/container_txt_upcoming"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_title_card_upcoming"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/robot_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:text="@string/app_name"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>